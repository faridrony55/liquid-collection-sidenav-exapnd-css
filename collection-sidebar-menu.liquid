    transform: translateX(8px);
}

.collection_sidebar_nav  .menu  .menu-link > a.submenu,
.collection_sidebar_nav  .menu  .menu-link > a.child_submenu{
  position: relative;
}
.collection_sidebar_nav   .menu   .menu-link > a.submenu::after,
.collection_sidebar_nav   .menu   .menu-link > a.child_submenu::after {
    content: "+";
    right: 0;
    position: absolute;
}
.collection_sidebar_nav   .menu   .menu-link > a.expand::after {
    content: "-"; 
